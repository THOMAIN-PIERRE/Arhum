                                <div class="bg-warning rounded-lg mt-2 text-dark p-5 m-auto" style="font-size: 1.2rem; height: 25rem;">
                                    <p class="price_table_row cost warning-bg text-center" style="font-size: 2rem;"><strong>{{ (carrier.price / 100)  | number_format(2, ',', '.')}} â‚¬</strong></p>
                                    <p class="text-center">{{ carrier.description | raw}}</p>
                                </div>
                            <div class="bg-success rounded-lg mt-2 text-center text-dark p-3" style="height: 8rem;"><img src="/uploads/carrier/{{ carrier.logo }}" width="140px" height="100px" style="text-center" class="rounded-lg"></div>
                        </div>
                    </div>  
                {% endfor %}  
            </div>
        <div class="dropdown-divider mt-5"></div>
            <a href="{{ path('order') }}" class="text-light text-left" style="font-size: 1.2rem; text-decoration: none;"><i class="fas fa-arrow-circle-left"></i> RETOUR A LA COMMANDE</b></a>
        </div>

    </div>

{% endblock %} 
