{% extends 'base.html.twig' %}

{% block title %}Détails du produit{% endblock %}


{% block stylesheets %}
    <link href={{ asset('assets/css/show.css')}} rel="stylesheet">
{% endblock %}


{% block body %}


<h1 class="text-center text-warning">FICHE PRODUIT</h1>
<div class="container">
<div class="col-md-12">
<div class="row mt-4 border border-light">
        <div class="zoom-effect-container col-md-5 bg-secondary p-4">
            <div class="image-card">
                <img src="/uploads/products/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
            </div>
            {# <img class="card-img-top text-center p-3" src="/uploads/products/{{ product.illustration }}" alt="Card image cap" style="height: auto; width: 70%;"> #}
        </div>
    <div class="col-md-7">
        <h3 class="text-light"><b>{{ product.name }}</b> - <span class="badge badge-success mt-3">Disponible</span></h3>
        {# <p>{{ product.subtitle }}</p> #}
        {# <h5 class="mb-3 text-dark"><i>Kenzo</i></h5> #}
        <p class="text-light"><i>{{ product.shortDescription | raw }}</i></p>
        <div class="row m-auto">
            <p class="product-page-price badge badge-success p-3 mt-2" style="font-size: 1.4rem"><i class="fas fa-coins text-light mr-2"></i> {{ ((product.price)/100)  | number_format(2, ',', '.')}} €</p>
            <h5 class="card-title text-light text-left mt-3 ml-3" style="font-size: 1.4rem;">{% if product.promo == 0 %} {% else %}<span class="badge badge-warning float-right p-2"><i class="fas fa-tag mr-2"></i> <b>Promo !</b></span> {% endif %}</h5>
        </div>
        <div class="dropdown-divider mt-2"></div>
        {# <p class="text-light badge badge-success p-2 mr-3 mt-2" style="font-size: 1.4rem;">{{ produit.volume }} </p> #}
        <p class="text-light badge badge-success p-2 mr-3" style="font-size: 1.4rem;">{{ product.characteristic.degree }} °</p>
        <p class="{{ product.conditioning.color }}" style="font-size: 1.4rem;">{{ product.conditioning.container }} {{ product.conditioning.volume }}</p>
        <p class="text-light {{ product.category.color }} p-2 mr-3 mt-2" style="font-size: 1.4rem;">{{ product.category }} </p>
        {# <p class="text-warning p-2 mr-3 mt-2">{{ product.description | raw }}</p> #}
        {# <p class="text-light badge badge-secondary p-2 mr-3 mt-2" style="font-size: 1.4rem;"><i class="fas fa-globe-americas mr-1"></i> {{ product.origin }} </p> #}
        <div class="mt-2 mb-4">
        {% if product.characteristic.rewards == null %}
        <span class="bg-secondary text-warning mt-2 mb-3 p-2" style="font-size: 1.2rem;"><i class="fas fa-medal text-warning mr-2"></i> <i>Ce produit n'a pas encore reçu de distinctions.</i></span>
        {% else %}
        {# <span class="col-12 badge badge-secondary text-warning text-left mt-2 p-2" style="font-size: 1.2rem;"> #}
        <div class="bg-secondary text-warning text-center rounded-lg" style="font-size: 1.3rem;">
            <div class="row m-auto">
                <div class="col-md-2 m-auto">
                    <i class="fas fa-medal text-center text-warning"></i>
                </div>
                <div class="col-md-10 border-left border-warning text-left">
                    <p class="m-auto p-1"><b><i>{{ product.characteristic.rewards | raw }}</i></b></p>
                </div>
            </div>
        </div>
        {% endif %}
        {# <p class="text-warning mt-2" style="font-size: 1rem; color: orange;"> {{ product.characteristic.rewards | raw }}</p> #}
        </div>
        {# <div class="dropdown-divider"></div> #}

        {# <h6 class="card-title text-light text-left mb-2" style='text-align:center;'>{{ product.shortDescription }}</h6>  #}

        {# Afficher les champs de sélection de la taille et de la couleur #}
