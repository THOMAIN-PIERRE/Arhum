        {# {% if app.user %}
        <a href="{{ path('add_to_cart',{'id':product.id}) }}" class="btn btn-warning btn-lg mt-4 mb-3"><i class="fas fa-shopping-cart text-dark mr-2"></i> <b>AJOUTER AU PANIER</b></a>   
        {% else %}
        <a href="{{ path('app_login') }}" class="btn btn-warning btn-lg border border-light mt-4 mb-3"><i class="fas fa-shopping-cart text-dark mr-2"></i> <b>AJOUTER AU PANIER</b></a>   
        {% endif %} #}
    </div>

</div>

<div class="container">
<div class="col-md-12 text-center mt-3 mb-4">
    {% if app.user %}
        {# <a href="{{ path('addPanier',{'id':product.id}) }}" class="btn btn-primary btn-lg mt-2 mb-3"><i class="fas fa-shopping-cart text-light mr-2"></i> AJOUTER AU PANIER</a>    #}
        <a href="{{ path('add_to_cart',{'id':product.id}) }}" class="btn btn-warning btn-lg border-dark mt-4 mb-3" style="box-shadow: 0px 0px 30px white;"><i class="fas fa-shopping-cart text-dark mr-2"></i> <b>AJOUTER AU PANIER</b></a>   
        {% else %}
        <a href="{{ path('app_login') }}" class="btn btn-warning btn-lg border border-light mt-4 mb-3"><i class="fas fa-shopping-cart text-dark mr-2"></i> <b>AJOUTER AU PANIER</b></a>   
    {% endif %}
</div>
</div>
