    <div class="col-3 text-left mt-2 mb-5">
        <div class="dropdown-divider mt-4"></div>
        <a href="{{ path('products') }}" class="text-light text-left" style="font-size: 1.2rem; text-decoration: none;"><i class="fas fa-arrow-circle-left"></i> RETOUR BOUTIQUE</b></a>
    <div>
</div>
</div>




<div class="d-flex row justify-content-center">
        <div class="col-md-12 mb-5">
            <ul class="col-12 nav nav-tabs">
                <li class="nav-item">
                    <button class="bg-warning nav-link active text-dark" data-toggle="tab" href="#home"><b>DESCRIPTION</b></button>
                </li>
                <li class="nav-item">
                    <button class="bg-warning nav-link text-dark" data-toggle="tab" href="#menu1"><b>CARACTERISTIQUES</b></button>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane container active bg-dark p-3 rounded text-white" id="home">
                    <h3 class="text-warning text-center mb-3"><i class="fas fa-wine-bottle"></i> <b>DESCRIPTION</b></h3>
                    <div class="dropdown-divider mb-4"></div>
                    <p class="text-light">{{ product.description | raw }}</p>
                </div>
                <div class="tab-pane container fade col-12 bg-dark p-3 rounded text-white" id="menu1">
                
                    <h3 class="text-warning text-center mb-3"><i class="fas fa-wine-glass-alt"></i> <b>CARACTERISTIQUES DU PRODUIT</b></h3>
                    <div class="dropdown-divider mb-4"></div>
                    
                    <div class="container">
                    <div class="col-md-12">
                    <div class="row">
                    <div class="col-md-6  float-left">
                    <img src="/uploads/products/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                    </div>

                    <div class="col-md-6 text-light">
                    <table class="table">
                    <tbody class="table table-hover table-light">
                        <tr>
                        <th scope="row">Type d'alcool</th>
                        <td>{{ product.characteristic.type }}</td>
                        </tr>
                        <tr>
                        <th scope="row" style="width: 100px;">Provenance</th>
                        <td>{{ product.characteristic.origin }}</td>
                        </tr>
                        <tr>
                        <th scope="row">Label</th>
                        <td>{{ product.characteristic.label }}</td>
                        </tr>
                        <tr>
                        <th scope="row">Distillation</th>
                        <td>{{ product.characteristic.distillation }}</td>
                        </tr>
                        <tr>
                        <th scope="row">Vieillissement</th>
                        <td>{{ product.characteristic.aging }}</td>
                        </tr>
                        <th scope="row">Millésime</th>
                        <td>{{ product.characteristic.vintage }}</td>
                        </tr>
                        {# <tr>
                        <th scope="row">Volume</th>
                        <td>{{ product.volume }}</td>
                        </tr> #}
                        <tr>
                        <th scope="row">Degré</th>
                        <td>{{ product.characteristic.degree }}</td>
                        </tr>
                        <tr>
                        <th scope="row">Prix et récompenses</th>
                        <td>{{ product.characteristic.rewards | raw }}</td>
                        </tr>
                    </tbody>
                    </table>
                    </div>
                    </div>
                    </div>
                    </div>

                </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %} 

