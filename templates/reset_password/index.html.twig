{% block body %}
<div class="container-fluid mt-5 mb-5 p-5 text-center">
    <div class="col-sm-8 col-md-5 btn btn-dark text-left col-md-5 p-4">
            <h3 class="text-center text-warning mt-3 mb-5 font-weight-normal">REINITIALISER LE MOT DE PASSE</h3>
            {# <h3 class="text-center text-warning mb-5 font-weight-normal">MOT DE PASSE</h3> #}
    {# <div class="block-small"> #}
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success mb-5">{{ message }}</div>
        {% endfor %}
        <form method="post">
            <label for="email" class="text-light">Email</label>
            <input type="email" name="email" class="form-control" placeholder="Votre adresse email" required autofocus>

            <button class="col-sm-6 btn btn-md btn-success btn-block text-center mt-4" type="submit">VALIDER</button>
            <hr>
            <p class="text-center"><a href="{{ path('app_login') }}" class="text-light"><b class="btn text-warning" style="font-size: 1rem;"><span class="text-light">OU SOUHAITEZ VOUS</span> VOUS CONNECTER ?</b></a></p>
        </form>
    {# </div> #}
    </div>
</div>
{% endblock %}


