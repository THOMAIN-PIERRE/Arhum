<span class="rating">
        {% for i in 1..5 %}
            {% if i <= review.note %}
                <i class="fas fa-star" style="color:yellow; text-shadow: 6px 8px 8px black;"></i>
            {% else %}
                <i class="far fa-star" style="color:yellow; text-shadow: 6px 8px 8px black;"></i>
            {% endif %}
        {% endfor %} 
    </span>   

    