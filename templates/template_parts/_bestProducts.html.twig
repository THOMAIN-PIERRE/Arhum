<div class="card mb-3 bg-secondary text-center">
  <h3 class="card-header text-warning mt-3 border-bottom" style="height: 4rem; font-size: 1.5rem; border-bottom: white;">{{ product.name | upper }}</h3>
  {# {# <h3 class="card-header text-warning mt-1 mb-1" style="height: 6rem; font-size: 1.6rem;">{{ product.name }}</h3> #}
  <div class="card-body text-center">
    <a href="{{ path('product', {'slug' : product.slug}) }}"><img src="/uploads/products/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid w-75 rounded-lg"></a></br>
    <h5 class="card-title badge badge-success border border-light text-light p-2 mt-3 font-italic" style="font-size: 1.3rem; font-weight: bold;">{{ (product.price / 100)  | number_format(2, ',', '.')}} â‚¬</h5>
    {% if product.promo < 1 %}
		
	{% else %}
		<p class="badge badge-warning text-dark border border-dark p-2 ml-2"><i class="fas fa-tag"></i> Promo !</p>
	{% endif %}
    <p class="card-text text-light" style="height: 3rem;">{{ product.subtitle }}</p>
  </div>
</div>